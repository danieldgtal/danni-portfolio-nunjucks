<header id="site_header" class="header">
  <div class="header-content clearfix">
    <!-- Text Logo -->
    <div class="text-logo">
      <a href="/">
        <div class="logo-symbol">D</div>
        <div class="logo-text">Danni <span>Chiatuiro</span></div>
      </a>
    </div>
    <!-- /Text Logo -->

    {# Style to highlight current link #}
    <style>
      .current-menu-item {
        font-weight: bold;
        color: red; /* Highlight color */
      }
    </style>

    <!-- Navigation -->
    <div class="site-nav mobile-menu-hide">
      <ul class="leven-classic-menu site-main-menu">
        <li class="menu-item">
          <a href="/index.html">About Me</a>
        </li>
        <li class="menu-item">
          <a href="/resume.html">Resume</a>
        </li>
        <li class="menu-item">
          <a href="/portfolio.html">Portfolio</a>
        </li>
      </ul>
    </div>

    <!-- Mobile Menu Toggle -->
    <a class="menu-toggle mobile-visible">
      <i class="fa fa-bars"></i>
    </a>
    <!-- Mobile Menu Toggle -->
  </div>
</header>

{# Dynamic link highlight #}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get the current URL path and normalize it (remove trailing slashes)
    var currentPath = window.location.pathname.replace(/\/$/, '') || '/index.html';
    
    // Select all menu items
    var menuItems = document.querySelectorAll('.menu-item');
    
    // Loop through the menu items to find the one that matches the current page
    menuItems.forEach(function(item) {
      var link = item.querySelector('a').getAttribute('href').replace(/\/$/, '');
      if (link === currentPath) {
        item.classList.add('current-menu-item');
      }
    });
  });
</script>



